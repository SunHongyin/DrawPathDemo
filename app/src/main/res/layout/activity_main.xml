<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shy.drawpathdemo.MainActivity">

    <com.shy.drawpathdemo.MySurfaceView
        android:id="@+id/my_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cls"
        />

    <Button
        android:id="@+id/btn_select_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_cls"
        android:text="SelectColor"
        />

    <Button
        android:id="@+id/btn_select_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_select_color"
        android:text="SelectSize"
        />


</RelativeLayout>
